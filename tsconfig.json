{
  "compilerOptions": {
    "lib": ["es2016", "dom", "es5"],
    "outDir": "./lib",
    "module": "CommonJS",
    "allowUmdGlobalAccess": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strict": false,
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["./src/*"]
}
